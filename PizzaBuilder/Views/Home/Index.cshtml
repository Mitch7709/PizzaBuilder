@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="category-header">
        <h1>Pizza</h1>
    </div>
    <div class="w-100"></div>
    <div class="col-md-4">
        <button class="menuItem" asp-controller="Pizza" asp-action="Create">
            <div class="row">    
                <div class="col-md-9">
                    <span class="menuItemName float-start">Build Your Own</span>
                    <p class="menuItemDesc float-start">Choose size, choice of crust style, and your favorite toppings</p>
                </div>
                <div class="col-md-3 align-items-center" style=display:flex;>
                    <img height=70 width=70 src="~/Images/bacon.png" />
                </div>
            </div>
            
        </button>
    </div>
</div>
