<!DOCTYPE html>

<html lang="en">
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PizzaBuilder</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PizzaBuilder.styles.css" asp-append-version="true" />

    <style>
        .nav-item:hover {
            background-color: #b92e2e;
            transition: 0.3s ease;
        }
        .nav-link.active  {
            border-bottom: 2px solid white;
            padding-bottom:0;
        }                
    </style>

    @*<link rel="stylesheet" href="~/css/oloBundle.css" />*@
    <link rel="stylesheet" href="~/css/MenuNav.css" />
</head>
<body>
    <header>
        <nav class="navbar py-3 navbar-expand-sm navbar-toggleable-sm bg-danger navbar-dark border-bottom box-shadow mb-3" style="background-color:#b92e2e">
            <div class="container-fluid" style="max-width:80%">
                <a class="navbar-brand" asp-area="" asp-controller="Pizza" asp-action="Index">PizzaBuilder</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="container-fluid">
                    <ul class="nav navbar-nav justify-content-end">
                        <li class="nav-item px-3 rounded-pill">
                            <a class="nav-link @(ViewBag.Current == "Home" ? "active" : "") text-light" asp-area="" asp-controller="Pizza" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item px-3 rounded-pill">
                            <a class="nav-link @(ViewBag.Current == "Menu" ? "active" : "") text-light" asp-area="" asp-controller="Pizza" asp-action="Menu">Menu</a>
                        </li>
                        <li class="nav-item px-3 rounded-pill">
                            <a class="nav-link @(ViewBag.Current == "Orders" ? "active" : "") text-light" asp-area="" asp-controller="Pizza" asp-action="Orders">Orders</a>
                        </li>
                        <li class="nav-item px-3 rounded-pill">
                            <a class="nav-link @(ViewBag.Current == "Login" ? "active" : "") text-light" asp-area="" asp-controller="Pizza" asp-action="Login">Log in</a>
                        </li>
                    </ul>
                </div>
                
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - PizzaBuilder - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
